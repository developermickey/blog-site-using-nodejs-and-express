<%- include('partials/header') %>


    <!-- Content -->

    <h1 class="text-2xl font-bold mb-4">Edit Blog</h1>
    <form action="/edit/<%= blog._id %>" method="POST" enctype="multipart/form-data"
        class="bg-white p-4 rounded shadow">
        <label for="title" class="block text-gray-700">Title</label>
        <input type="text" name="title" id="title" class="border border-gray-300 p-2 rounded w-full mb-4"
            value="<%= blog.title %>" required>
        <label for="content" class="block text-gray-700">Content</label>
        <textarea name="content" id="content" class="border border-gray-300 p-2 rounded w-full mb-4"
            required><%= blog.content %></textarea>
        <label for="image" class="block text-gray-700">Image</label>
        <input type="file" name="image" id="image" class="border border-gray-300 p-2 rounded w-full mb-4">
        <% if (blog.image) { %>
            <img src="<%= blog.image %>" alt="<%= blog.title %>" class="mt-2">
            <% } %>
                <button type="submit" class="bg-blue-500 text-white p-2 rounded">Update</button>
    </form>






    <!-- Footer -->


    <%- include('partials/footer') %>