<%- include('partials/header') %>


    <div class="container py-5 mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Create Blog Post</h2>
                        <form action="/create" method="POST" enctype="multipart/form-data">
                            <div class="form-group mb-4">
                                <label for="title" class="text-gray-700 mb-3"><b>Title</b></label>
                                <input type="text" name="title" id="title" class="form-control" required>
                            </div>
                            <div class="form-group mb-4">
                                <label for="content" class="text-gray-700 mb-3"><b>Content</b></label>
                                <textarea name="content" id="content" class="form-control" rows="6" required></textarea>
                            </div>
                            <div class="form-group mb-4">
                                <label for="image" class="text-gray-700 mb-3"><b>Upload Image</b></label><br>
                                <input type="file" name="image" id="image" class="form-control-file">
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary mt-3">Create Blog</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>